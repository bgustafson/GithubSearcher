<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.brigus.githubsearcher.fragments.SearchFragment">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/octocat"/>

        <!--<EditText android:id="@+id/username_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_user_hint"
                android:textAlignment="center"/>-->

        <AutoCompleteTextView android:id="@+id/autocomplete_username_textview"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="@string/enter_user_hint"
                  android:textAlignment="center"/>


        <Button  android:id="@+id/find_user_button"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/find_user"
                android:layout_gravity="center"/>

    </LinearLayout>


</FrameLayout>
