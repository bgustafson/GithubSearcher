<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.brigus.githubsearcher.fragments.CommitsFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView android:layout_height="75dp"
                   android:layout_width="75dp"
                   android:layout_marginRight="5dp"
                   android:src="@drawable/octocat"/>

        <TextView android:id="@+id/project_name"
                  android:textStyle="bold"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  tools:text="Name"/>
        <TextView android:id="@+id/project_description"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  tools:text="login"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/commits_recycler"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</FrameLayout>
